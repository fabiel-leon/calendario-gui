    private static final class BackgroundWorker extends SwingWorker<String, String> {

        private final JProgressBar jPBProgreso;
        private final JLabel jLAyuda;
        private final Color colorCalendario;
        private final JButton jBHacerCalendario;
        private final Font font;
        private final int espacioEntreDias;
        private final boolean sombraDia;
        private final boolean sombraMes;
        private final boolean sombraCalendario;

        public BackgroundWorker(JProgressBar jPBProgreso, JLabel jLAyuda, Color colorCalendario,
                JButton jBHacerCalendario, Font font, int espacioEntreDias,
                boolean sombraDia, boolean sombraMes, boolean sombraCalendario) {
            this.jPBProgreso = jPBProgreso;
            this.colorCalendario = colorCalendario;
            this.jBHacerCalendario = jBHacerCalendario;
            this.jLAyuda = jLAyuda;
            this.font = font;
            this.espacioEntreDias = espacioEntreDias;
            this.sombraDia = sombraDia;
            this.sombraMes = sombraMes;
            this.sombraCalendario = sombraCalendario;
        }

        @Override
        protected String doInBackground() throws Exception {
            publish();
            return "Termine";
        }
    }

