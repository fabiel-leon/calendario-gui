    public CalendarioVisual() {
        initComponents();
        setLocationRelativeTo(null);
        GraphicsEnvironment environment = GraphicsEnvironment.getLocalGraphicsEnvironment();
        Font[] allFonts = environment.getAllFonts();
        DefaultComboBoxModel model = (DefaultComboBoxModel) jCBLetra.getModel();
        FontRenderContext fontRenderContext = ((Graphics2D) jCBLetra.getGraphics()).getFontRenderContext();
        for (int i = 0; i < allFonts.length; i++) {
            model.addElement(allFonts[i]);
        }
    }
