    private void jBEscogerDirectorioActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jBEscogerDirectorioActionPerformed
        if (fChooser == null) {
            fChooser = new JFileChooser();
            fChooser.setFileSelectionMode(JFileChooser.DIRECTORIES_ONLY);
        }
        int showOpenDialog = fChooser.showOpenDialog(this);
        if (showOpenDialog == JFileChooser.APPROVE_OPTION) {
            absolutePath = fChooser.getSelectedFile().getAbsolutePath();
            jTFDirectorio.setText(absolutePath);
        }
        // TODO add your handling code here:
    }//GEN-LAST:event_jBEscogerDirectorioActionPerformed

    private void jBColorCalendarioActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jBColorCalendarioActionPerformed
        // TODO add your handling code here:
        color = JColorChooser.showDialog(rootPane, "Color Calendario", color);
        jBColorCalendario.setBackground(color);
    }//GEN-LAST:event_jBColorCalendarioActionPerformed

    private void jBHacerCalendarioActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jBHacerCalendarioActionPerformed
        backgroundWorker = new BackgroundWorker(jPBProgreso, jLAyuda, color,
                jBHacerCalendario, (Font) jCBLetra.getSelectedItem(),
                (Integer) jSEspacioEntreDias.getValue(), jCBSombraDia.isSelected(),
                jCBSombraMes.isSelected(), jCBSombraCalendario.isSelected());
        backgroundWorker.execute();

    }//GEN-LAST:event_jBHacerCalendarioActionPerformed

